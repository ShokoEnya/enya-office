<%= form_with model: @information, local: true do |f| %>
  <div class="form-input">
    <%= f.label :title, "タイトル" %><br />
    <%= f.text_field :title, class: 'form-title' %>
  </div>

  <div class="form-input">
    <%= f.label :text, "お知らせ内容" %><br />
    <%= f.text_area :text, class: 'form-text' %>
  </div>

  <div class="actions">
    <%= f.submit '投稿', class: 'form-submit' %>
  </div>
<% end %>
